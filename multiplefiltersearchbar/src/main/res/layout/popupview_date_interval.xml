<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@color/popup_view_background_color">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dateIntervalPopup_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <LinearLayout
        android:id="@+id/dateIntervalPopup_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="#eeeeee"
            android:paddingLeft="16dp"
            android:text="自定义时间"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从:"/>
            <EditText
                android:id="@+id/dateIntervalPopup_custom_date_begin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="6dp"
                android:textSize="12sp"
                android:background="@drawable/menuitem_edittext_border"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至:"/>
            <EditText
                android:id="@+id/dateIntervalPopup_custom_date_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="6dp"
                android:textSize="12sp"
                android:background="@drawable/menuitem_edittext_border"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/dateIntervalPopup_diver1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"/>

    <LinearLayout
        android:id="@+id/dateIntervalPopup_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/popupView_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="重置"/>

        <Button
            android:id="@+id/popupView_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:text="确认"/>
    </LinearLayout>

</LinearLayout>